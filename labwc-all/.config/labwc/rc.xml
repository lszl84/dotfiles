<?xml version="1.0"?>
<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->
<labwc_config>
  <theme>
<!--    <name>GTK</name> -->
    <cornerRadius>0</cornerRadius>
    <font name="sans" size="10"/>
  </theme>

  <desktops number="4" />
  
  <windowRules>
    <windowRule identifier="firefox">
      <action name="SendToDesktop" to="2"/>
      <action name="Maximize"/>
    </windowRule>
    <windowRule identifier="foot*">
      <action name="SendToDesktop" to="1"/>
      <action name="SetDecorations" decorations="border"/>
      <action name="Maximize"/>
    </windowRule>
    <windowRule title="*Gnumeric">
      <action name="SendToDesktop" to="3"/>
      <action name="Maximize"/>
    </windowRule>
  </windowRules>


  <keyboard>
    <default/>
    <!-- Use a different terminal emulator -->
    <keybind key="W-Return">
      <action name="Execute" command="footclient"/>
    </keybind>
    <keybind key="W-l">
      <action name="Execute" command="swaylock -c 000000"/>
    </keybind>
    <keybind key="W-Space">
      <action name="Execute" command="fuzzel"/>
    </keybind>
    <keybind key="W-,">
      <action name="GoToDesktop" to="left"/>
    </keybind>
    <keybind key="W-.">
      <action name="GoToDesktop" to="right"/>
    </keybind>
    <keybind key="W-u">
      <action name="GoToDesktop" to="1"/>
    </keybind>
    <keybind key="W-i">
      <action name="GoToDesktop" to="2"/>
    </keybind>
    <keybind key="W-o">
      <action name="GoToDesktop" to="3"/>
    </keybind>
    <keybind key="W-p">
      <action name="GoToDesktop" to="4"/>
    </keybind>

    <keybind key="XF86MonBrightnessUp">
      <action name="Execute">
        <command>sudo brightnessctl set +2%</command>
      </action>
    </keybind>
    <keybind key="XF86MonBrightnessDown">
      <action name="Execute">
        <command>sudo brightnessctl set 2%-</command>
      </action>
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute">
        <command>pactl set-sink-volume @DEFAULT_SINK@ +5%</command>
      </action>
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute">
        <command>pactl set-sink-volume @DEFAULT_SINK@ -5%</command>
      </action>
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute">
        <command>pactl set-sink-mute @DEFAULT_SINK@ toggle</command>
      </action>
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None"/>
    </keybind>
    <keybind key="W-m">
      <action name="Iconify"/>
    </keybind>
    <keybind key="W-n">
      <action name="ToggleMaximize" />
    </keybind>
  </keyboard>
  <mouse>
    <default/>
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="some-custom-menu"/>
      </mousebind>
    </context>
  </mouse>
  <libinput>
    <device>
      <naturalScroll>yes</naturalScroll>
    </device>
  </libinput>
</labwc_config>
