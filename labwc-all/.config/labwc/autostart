# Terminal Server - so that the clients use less resources
foot --server >/dev/null 2>&1 &

# Notifications
mako >/dev/null 2>&1 &

# Laptop Screen Settings
wlr-randr --output eDP-1 --scale 2.25 --adaptive-sync enabled &

# Break reminders and low battery warning
"$HOME/.local/bin/battery-notifier.sh" &
"$HOME/.local/bin/break-reminder.sh" &

# Background
swaybg -m fill -i  /usr/share/backgrounds/cosmic/otherworldly_earth_nasa_ISS064-E-29444.jpg &

# Screen lock and suspend
swayidle -w \
	timeout 300 'swaylock -f -c 000000' \
	timeout 330 'sudo systemctl suspend' \
	before-sleep 'swaylock -f -c 000000' >/dev/null 2>&1 &
