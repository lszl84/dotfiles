# Terminal Server - so that the clients use less resources
foot --server >/dev/null 2>&1 &

# Monitor Scaling
kanshi >/dev/null 2>&1 &

# Hack for Studio Display not turning on after restart
(wlr-randr | grep -q "DP-2" && wlr-randr --output DP-2 --off && sleep 0.5 && wlr-randr --output DP-2 --on) &

# Notifications
mako >/dev/null 2>&1 &

# Fastfetch background + break reminders
/home/luke/.local/bin/dynamic-background.sh >/dev/null 2>&1 &

# Screen lock and suspend
swayidle -w \
	timeout 300 'swaylock -f -c 000000' \
	timeout 330 'systemctl suspend' \
	before-sleep 'swaylock -f -c 000000' >/dev/null 2>&1 &
