# Example autostart file

# Alpine Linux stuff
openrc -U gui

# Terminal Server - so that the clients use less resources
foot --server >/dev/null 2>&1 &

# Spotify sink
spotifyd &

# Monitor Scaling
kanshi >/dev/null 2>&1 &

# Notifications
mako >/dev/null 2>&1 &

# Background
swaybg -c 0c3246

# Reminder for taking breaks!
/home/luke/.local/bin/break-reminder.sh >/dev/null 2>&1 &

# Screen lock and suspend
swayidle -w \
	timeout 300 'swaylock -f -c 000000' \
	timeout 330 'doas zzz -s' \
	before-sleep 'swaylock -f -c 000000' >/dev/null 2>&1 &
