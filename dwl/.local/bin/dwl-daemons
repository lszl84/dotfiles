#!/bin/bash
# dwl-daemons â€” Background daemons started after dwl compositor is ready

# Foot terminal server (footclient connects to this)
foot --server &

# Wallpaper
swaybg -i /usr/share/backgrounds/linuxmint-wilma/aksenapati_blanket.jpg -m fill &

# Idle/lock (25 min lock, 30 min total suspend)
swayidle -w \
    timeout 1500 'swaylock -f -c 000000' \
    timeout 1800 'systemctl suspend' \
    before-sleep 'swaylock -f -c 000000' \
    lock 'swaylock -f -c 000000' &
